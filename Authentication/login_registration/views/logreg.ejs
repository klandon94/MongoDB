<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login and Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous"> 
    <!-- Optional theme --> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/logreg.css">
</head>
<body>

<h1>Login and Registration</h1>

<% if (messages.logout){ %>
    <% for (var x of messages.logout) { %>
        <p class='success' style="margin-left:75px"><%=x%></p>
    <% } %>
<% } %>
<% if (messages.badlogin){ %>
    <% for (var x of messages.badlogin) { %>
        <p class='error' style="margin-left:75px"><%=x%></p>
    <% } %>
<% } %>

<div id='container'>
    <div id='register'>
        <h3>Register here!</h3>
        <form action="/register" method='post'>
            <div class="form-group">                
                <label for="First_Name">First Name:</label>
                <br>
                <% if (messages.first_name){ %>
                    <% for (var x of messages.first_name) { %>
                        <p class='error'><%=x%></p>
                    <% } %>
                <% } %>
                <input type="text" name='first_name' value='<%=session.first_name%>' class="form-control" id="First_Name" placeholder="First Name">
            </div>
            <div class="form-group">
                <label for="Last_Name">Last Name:</label>                
                <br>
                <% if (messages.last_name){ %>
                    <% for (var x of messages.last_name) { %>
                        <p class='error'><%=x%></p>
                    <% } %>
                <% } %>     
                <input type="text" name='last_name' value='<%=session.last_name%>' class="form-control" id="Last_Name" placeholder="Last Name">
            </div>
            <div class="form-group">
                <label for="Email">Email:</label>                
                <br>             
                <% if (messages.email){ %>
                    <% for (var x of messages.email) { %>
                        <p class='error'><%=x%></p>
                    <% } %>
                <% } %>
                <input type="text" name='email' value='<%=session.email%>' class="form-control" id="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>                
                <br>       
                <% if (messages.password){ %>
                    <% for (var x of messages.password) { %>
                        <p class='error'><%=x%></p>
                    <% } %>
                <% } %>       
                <input type="password" name='password' class="form-control" id="Password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="Confirm_Password">Confirm password:</label>                
                <br>
                <% if (messages.confirm_password){ %>
                    <% for (var x of messages.confirm_password) { %>
                        <p class='error'><%=x%></p>
                    <% } %>
                <% } %>
                <input type="password" name='confirm_password' class="form-control" id="Confirm_Password" placeholder="Confirm password">
            </div>
            <div class="form-group" id='birthdate'>
                <label for="Birthday">Birthday:</label>                
                <br>    
                <% if (messages.birthday){ %>
                    <% for (var x of messages.birthday) { %>
                        <p class='error'><%=x%></p>
                    <% } %>
                <% } %>        
                <input type="date" name='birthday' value='<%=session.birthday%>' class="form-control datepicker" id="Birthday">
            </div>
            <button type="submit" value='Register' class='btn btn-success'>Register!</button>
        </form>
    </div>
    <div id='login'>
        <h3>Login here!</h3>      
        <% if (messages.login){ %>
            <% for (var x of messages.login) { %>
                <p class='error'><%=x%></p>
            <% } %>
        <% } %> 
        <form action="/login" method='post'>
            <div class="form-group">
                <label for="LEmail">Email:</label>
                <input type="text" name='email' value='<%=session.lemail%>' class="form-control" id="LEmail" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="LPassword">Password:</label>
                <input type="password" name='password' class="form-control" id="LPassword" placeholder="Password">
            </div>
            <button type="submit" value='Login' class='btn btn-success'>Login!</button>
        </form>
    </div>
</div>
</body>
</html>